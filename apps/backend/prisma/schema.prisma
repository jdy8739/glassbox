// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - Supports both OAuth and email/password authentication
model User {
  id         String      @id @default(uuid())
  email      String      @unique
  password   String?     // Hashed password (null for OAuth users)
  name       String?
  picture    String?     // Google profile picture URL
  googleId   String?     @unique
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  portfolios Portfolio[]

  @@map("users")
}

// Portfolio model - Simplified schema (Option 1)
// Stores tickers and quantities as arrays, analysis as JSON snapshot
model Portfolio {
  id               String   @id @default(uuid())
  userId           String
  name             String
  tickers          String[] // ['AAPL', 'MSFT', 'NVDA']
  quantities       Float[] // [10, 20, 15] - must match tickers array length
  analysisSnapshot Json? // Full analysis results (nullable until first analysis)
  
  // Summary stats for list view optimization
  sharpeRatio    Float?
  volatility     Float?
  expectedReturn Float?
  analysisDate   String?

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("portfolios")
}
