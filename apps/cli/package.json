{
  "name": "@glassbox/cli",
  "version": "0.1.0",
  "description": "Command-line interface for Glassbox portfolio optimization",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "bin": {
    "glassbox": "dist/index.js"
  },
  "dependencies": {
    "@glassbox/types": "workspace:*",
    "@glassbox/utils": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "mathjs": "^12.4.1",
    "yahoo-finance2": "^2.11.12"
  },
  "devDependencies": {
    "@types/node": "^20.14.5",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.57.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.6.2"
  }
}
